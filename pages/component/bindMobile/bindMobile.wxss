/* pages/component/bindMobile.wxss */
.window {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.window .window_box {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 640rpx;
	height: 715rpx; 
  overflow: hidden;
  background-color: #f8f8f8;
	box-shadow: 0px 0px 9rpx 2rpx rgba(0, 0, 0, 0.3);
  z-index: 9
}
.bindMobile .window_box  {
  padding: 20rpx 40rpx 80rpx;
}
.bindMobile .window_box .title {
  font-family: SourceHanSansCN-Bold;
	font-size: 44rpx;
  color: #000000;
  height: 80rpx;
  display: flex;
  align-items: flex-end;
}
.bindMobile .window_box .cancel {
  position: absolute;
  top: 0;
  right: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100rpx;
  height: 100rpx;
}
.bindMobile .window_box .cancel image {
  width: 25rpx;
  height: auto;
}
.bindMobile .window_box .form {
  height: 500rpx;
  margin-top: 35rpx;
}
.bindMobile .window_box .form .item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 174rpx;
  border-bottom: 1rpx solid #e9e9e9;
}
.bindMobile .window_box .form .item .tit {
  font-family: SourceHanSansCN-Medium;
	font-size: 30rpx;
  color: #000000;
  display: flex;
  align-items: center;
  height: 70rpx;
}
.bindMobile .window_box .form .item .val {
  display: flex;
  align-items: center;
  height: 80rpx;
  font-family: SourceHanSansCN-Normal;
	font-size: 30rpx;
}
.bindMobile .window_box .form .item .val input {
  flex: 1;
}
.bindMobile .window_box .form .code_item .val .get_code {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 170rpx;
	height: 62rpx;
	background: #e9e9e9;
	border-radius: 10rpx;
  color: #ffffff;
  font-family: SourceHanSansCN-Medium;
	font-size: 20rpx;
  margin-left: 30rpx;
}
.bindMobile .window_box .form .confirm {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 82rpx;
  border-radius: 10rpx;
  font-family: SourceHanSansCN-Normal;
	font-size: 38rpx;
  background: #19475c;
  color: #ffffff;
  margin-top: 60rpx;
}