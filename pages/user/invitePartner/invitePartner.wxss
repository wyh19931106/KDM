/* pages/user/invitePartner/invitePartner.wxss */
.invitePartner {
  position: absolute;
  width: 100%;
  min-height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.invitePartner .title {
  font-family: SourceHanSansCN-Normal;
	font-size: 52rpx;
  color: #18425a;
}
.invitePartner .form {
  width: 534rpx;
  margin-top: 96rpx;
}
.invitePartner .form .item {
  display: flex;
  align-items: center;
  width: 100%;
  height: 76rpx;
  font-family: SourceHanSansCN-Normal;
	font-size: 28rpx;
  color: #636363;
  border: 1rpx solid #e9e9e9;
  margin-bottom: 20rpx;
  overflow: hidden;
}
.invitePartner .form .item .txt {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 180rpx;
  height: 72rpx;
  background: #f8f8f8;
  padding-right: 15rpx;
  border-right: 1rpx solid #e9e9e9;
}
.invitePartner .form .item .val {
  flex: 1;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}
.invitePartner .form .item .val input {
  width: 100%;
}
.invitePartner .form .confirm {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 268rpx;
	height: 84rpx;
	background: #18425a;
	border-radius: 10rpx;
  font-family: SourceHanSansCN-Medium;
	font-size: 44rpx;
  color: #ffffff;
  margin: 120rpx auto 0;
}