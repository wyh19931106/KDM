/* pages/user/connectUs/connectUs.wxss */
page {
  background: #f8f8f8;
}
.connectUs .hint {
  display: flex;
  align-items: center;
  height: 94rpx;
  font-family: SourceHanSansCN-Normal;
	font-size: 28rpx;
  color: #636363;
  padding: 0 30rpx;
}
.connectUs .inf {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 50rpx 25rpx;
  height: auto;
  margin: 0 20rpx;
  background: #ffffff;
	box-shadow: 0px 0px 9px 1px 
		rgba(0, 0, 0, 0.3);
	border-radius: 10px;
}
.connectUs .inf image {
  width: 200rpx;
  height: auto;
}
.connectUs .inf .tel {
  display: flex;
  align-items: center;
  height: 100rpx;
  font-family: SourceHanSansCN-Normal;
	font-size: 34rpx;
  color: #9a9a9a;
}
.connectUs .inf .call {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 82rpx;
	background: #18425a;
	border-radius: 10rpx;
  font-family: SourceHanSansCN-Normal;
	font-size: 38rpx;
  color: #ffffff;
}