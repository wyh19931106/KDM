/* pages/component/shareWin/shareWin.wxss */
.share_win {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.4);
  z-index: 99;
}
.share_win .share_box {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: auto;
  background: #ffffff;
}
.share_win .share_box .share_tr {
  display: flex;
  height: 168rpx;
  border-bottom: 1rpx solid #e9e9e9;
}
.share_win .share_box .share_tr .share_item {
  width: 20%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.share_win .share_box .share_tr .share_item image {
  width: 96rpx;
  height: 96rpx;
}
.share_win .share_box .share_tr .share_item text {
  font-family: SourceHanSansCN-Normal;
	font-size: 24rpx;
  color: #565656;
  margin-top: 5rpx;
}