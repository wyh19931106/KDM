/* pages/component/exportWin/exportWin.wxss */
.export_window {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  transform: translate(0,0);
  background: none;
  z-index: 99;
}
.export_window .window_box {
  position: absolute;
  bottom: 130rpx;
  left: 30rpx;
  width: 200rpx;
  height: auto;
  background: #e9e9e9;
  font-family: SourceHanSansCN-Normal;
	font-size: 18rpx;
  border: 3rpx solid #ffffff;
}
.export_window .window_box .tit {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: #18425a;
  color: #ffffff;
  height: 54rpx;
}
.export_window .window_box .email {
  display: flex;
  align-items: center;
  height: 54rpx;
  border-top: 1rpx solid #ffffff;
  padding: 0 10rpx;
}
.export_window .window_box .email input {
  flex: 1;
  text-align: center;
}
.export_window .window_box .handle {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 54rpx;
  border-top: 1rpx solid #ffffff;
  color: #13394f;
}
.export_window .window_box .handle text {
  display: flex;
  align-items: center;
  height: 100%;
  padding: 0 20rpx;
}
