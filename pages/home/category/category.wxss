/* pages/category/category.wxss */
page {
  background: #f6f6f6;
}
.category {
  width: 100%;
  min-height: 100%;
}
.category .nav {
  height: 110rpx;
  background: #ffffff;
  display: flex;
  border-bottom: 1rpx solid #e9e9e9;
}
.category .nav .item {
  font-size: 38rpx;
  color: #636363;
  flex: 1;
  display: flex;
  height: 100%;
  justify-content: center;
  align-items: center;
  border-right: 1rpx solid #e9e9e9;
}
.category .nav .item:nth-last-child(1) {
  border: none;
}
.category .nav .active {
  color: #18425a;
}
.category .country_list {
  width: 100%;
  height: auto;
  margin-top: 15rpx;
}
.category .country_list .item {
  width: 100%;
  height: 90rpx;
  background: #ffffff;
  border-bottom: 1rpx solid #e9e9e9;
  margin-bottom: 10rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
}
.category .country_list .item .l {
  width: 52rpx;
  height: auto;
} 
.category .country_list .item .c {
  flex: 1;
  margin-left: 20rpx;
  font-family: SourceHanSansCN-Normal;
	font-size: 30rpx;
	font-weight: normal;
  color: #636363;
}
.category .country_list .item .r {
  width: 15rpx;
  height: auto;
}
.category .country_list .select {
  background: #e9e9e9;
}

.goodsQuery {
  display: flex;
  flex-direction: column;
  position: fixed;
  min-height: 100%;
  width: 100%;
  background: #ffffff;
}
.goodsQuery .select_box {
  padding: 15rpx 14rpx 0;
}
.goodsQuery .select_box .item {
  border-radius: 10px;
	border: solid 2rpx #e9e9e9;
  height: 97rpx;
  position: relative;
  display: flex;
  align-items:center;
  font-size: 30rpx;
  padding: 0 20rpx;
  overflow: hidden;
}
.goodsQuery .select_box .item input {
  flex: 1;
}
.goodsQuery .select_box .select_t {
  display: flex;
  height: 113rpx;
}
.goodsQuery .select_box .select_t .country {
  width: 225rpx;
	height: 113rpx;
  margin-right: 10rpx;
}
.goodsQuery .select_box .select_t .country::after {
  content: "";
  position: absolute;
  top: 0;
  right: 0;
  width: 0;
  height: 0;
  border-bottom: 40rpx solid transparent;
  border-right: 22px solid #9a9a9a;
}
.goodsQuery .select_box .select_t .no {
  flex: 1;
  height: 113rpx;
}

.goodsQuery .select {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.goodsQuery .select_btn {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 268rpx;
	height: 84rpx;
	background-color: #18425a;
	border-radius: 10rpx;
  color: #ffffff;
  font-family: SourceHanSansCN-Medium;
	font-size: 44rpx;
	font-weight: normal;
}
.goodsQuery .select_btn icon {
  margin-right: 12rpx;
}
